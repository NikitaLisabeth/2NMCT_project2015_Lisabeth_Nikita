    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#BD0000"
                android:endColor="#A12121"
                android:angle="270" />

            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#BD0000"
                android:startColor="#A12121"
                android:angle="270" />

            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
